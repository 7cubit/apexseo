{
    "name": "apexseo-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "start:api": "cd packages/api && npm run dev",
        "start:workers": "cd packages/workers && npm run dev",
        "start:app": "cd packages/app && npm run dev",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "turbo": "latest",
        "prettier": "latest"
    },
    "packageManager": "npm@10.0.0",
    "workspaces": [
        "packages/*"
    ]
}