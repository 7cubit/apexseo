{
    "name": "apexseo-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "lint": "turbo run lint",
        "start:api": "cd packages/api && npm run dev",
        "start:workers": "cd packages/workers && npm run dev",
        "start:app": "cd packages/app && npm run dev",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/node": "^24.10.1",
        "dotenv": "^17.2.3",
        "prettier": "latest",
        "ts-node": "^10.9.2",
        "turbo": "latest",
        "typescript": "^5.9.3"
    },
    "packageManager": "npm@10.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ]
}