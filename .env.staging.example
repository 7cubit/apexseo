# Staging Environment Variables
# Copy this to .env.staging and fill in your values

# GCP Configuration
GCP_PROJECT_ID=apexseo-480102
GCP_REGION=us-central1

# Database (Cloud SQL)
DATABASE_URL=postgresql://apexseo:PASSWORD@/apexseo?host=/cloudsql/apexseo-480102:us-central1:apexseo-staging-db

# ClickHouse Cloud (or self-hosted)
CLICKHOUSE_HOST=https://your-instance.clickhouse.cloud:8443
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-password
CLICKHOUSE_DB=apexseo_staging

# Temporal Cloud (or self-hosted)
TEMPORAL_ADDRESS=your-namespace.tmprl.cloud:7233
TEMPORAL_NAMESPACE=apexseo-staging

# API Keys
SERPER_API_KEY=your-serper-api-key
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# NextAuth.js
NEXTAUTH_URL=https://staging.apexseo.com
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Google OAuth (for GSC integration)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://staging.apexseo.com/api/auth/gsc/callback

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# Sentry (optional, for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_GSC_INTEGRATION=false
ENABLE_GA4_INTEGRATION=false
ENABLE_AI_FEATURES=true
